{
  "manifest_version": 3,
  "name": "LLM Translator",
  "version": "1.5",
  "description": "LLM을 이용한 간단한 크롬 사이드패널 번역 및 툴팁 번역기",
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "notifications",
    "webNavigation",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "http://localhost:11434/*",
    "https://localhost:11434/*",
    "http://localhost:1234/*",
    "https://localhost:1234/*",
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "template/sidepanel.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "assets/icon/icon16.png",
    "48": "assets/icon/icon48.png",
    "128": "assets/icon/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon/icon16.png",
      "48": "assets/icon/icon48.png",
      "128": "assets/icon/icon128.png"
    },
    "default_title": "LLM Translator"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "js/api.js",
        "js/tooltip.js"
      ],
      "matches": [
        "https://*/*"
      ],
      "css": [],
      "run_at": "document_end",
      "all_frames": true,
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "css/*",
        "template/*",
        "*.png",
        "*.svg",
        "js/*"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}